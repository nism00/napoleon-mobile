<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>
    <ImageView
            android:layout_width="246dp"
            android:layout_height="155dp" app:srcCompat="@drawable/ic_launcher_foreground" android:id="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/cost" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="330dp"
            android:layout_height="87dp"
            android:id="@+id/description" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="111dp"
            android:layout_height="62dp"
            android:id="@+id/cost" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/description"/>
</android.support.constraint.ConstraintLayout>