<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderActivity">

    <TextView
            android:text="Заполните необходимые данные"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="номер телефона"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/userName" />
    <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="дата"
            android:ems="10"
            android:id="@+id/date"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/phone"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/time"
            android:hint="время"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/date"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="имя"
            android:ems="10"
            android:id="@+id/userName" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Заказать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveOrder" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/time" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <Button
            android:id="@+id/selectDate"
            android:layout_width="61dp"
            android:layout_height="46dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/date" android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_my_calendar" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/phone"/>
    <Button
            android:layout_width="58dp"
            android:layout_height="42dp"
            android:id="@+id/selectTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/time"
            android:layout_marginEnd="8dp" android:background="@android:drawable/ic_lock_idle_alarm"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/date"/>
</android.support.constraint.ConstraintLayout>