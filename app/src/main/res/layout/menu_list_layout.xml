<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:padding="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/menuItem"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:typeface="monospace"
            android:lineSpacingExtra="1sp"
            android:textColor="#440202"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/costItem"
            android:layout_marginEnd="-7dp"/>

    <TextView
            android:id="@+id/costItem"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:fontFamily="@font/anton"
            android:typeface="monospace"
            android:lineSpacingExtra="1sp"
            android:textColor="#440202"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="379dp"
            android:layout_height="19dp"
            app:srcCompat="@drawable/draw2"
            android:id="@+id/imageView3"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/menuItem"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_alignStart="@id/menuItem"
            android:layout_alignEnd="@+id/costItem"
            android:scaleType="fitXY"/>

</RelativeLayout>